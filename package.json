{
  "name": "location-state-monorepo",
  "private": true,
  "workspaces": [
    "src/packages/*",
    "src/examples/**/*"
  ],
  "devDependencies": {
    "@testing-library/react": "8.0.1",
    "@types/jest": "^24.0.11",
    "codecov": "^3.3.0",
    "commitizen": "^3.1.1",
    "copyfiles": "2.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^3.13.3",
    "prettier": "^1.17.0",
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0",
    "react-hooks-testing-library": "^0.5.0",
    "react-scripts": "^3.0.1",
    "react-test-renderer": "16.9.0-alpha.0",
    "typescript": "3.5.1"
  },
  "resolutions": {
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0",
    "react-test-renderer": "16.9.0-alpha.0"
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "yarn lerna run dev --parallel",
    "build": "yarn copy:readme; yarn lerna run build",
    "test": "react-scripts test",
    "copy:readme": "npx copyfiles README.md src/packages/use-location-state/; npx copyfiles README.md src/packages/react-router-use-location-state/"
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiel/use-location-state.git"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jx,tsx,ts}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/*.config.{js,jx,tsx,ts}"
    ]
  }
}
