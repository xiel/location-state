{
  "name": "location-state-monorepo",
  "private": true,
  "workspaces": [
    "src/packages/*",
    "src/examples/**/*"
  ],
  "devDependencies": {
    "@testing-library/react": "^9.1.4",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.18",
    "@types/jsdom": "^12.2.4",
    "@types/react-test-renderer": "^16.9.0",
    "bundlesize": "^0.18.0",
    "codecov": "^3.3.0",
    "commitizen": "^4.0.3",
    "copyfiles": "2.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.11.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.1",
    "react-test-renderer": "^16.9.0",
    "typescript": "^3.6.3",
    "use-location-state-test-helpers": "*"
  },
  "scripts": {
    "commit": "git-cz",
    "start": "yarn dev",
    "dev": "yarn build; yarn lerna run dev --parallel",
    "build": "yarn copy:readme; yarn lerna run build",
    "test": "react-scripts test",
    "prettier": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "copy:readme": "npx copyfiles README.md src/packages/use-location-state/; npx copyfiles README.md src/packages/react-router-use-location-state/"
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiel/use-location-state.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./src/packages/**/dist/*.js",
      "maxSize": "5 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jx,tsx,ts}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/*.config.{js,jx,tsx,ts}"
    ]
  }
}
